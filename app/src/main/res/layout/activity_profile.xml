<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_userActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_gradient_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.myshopnetapp.Utilities.MSNTextView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24">
        </com.example.myshopnetapp.Utilities.MSNTextView>

        <TextView
            android:id="@+id/textView_titleUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/toolbar_title_paddingStart"
            android:paddingEnd="0dp"
            android:text="@string/title_profileComplete"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/toolbar_title_titleSize"
            android:textStyle="bold">
        </TextView>
    </androidx.appcompat.widget.Toolbar>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_userActivity">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <FrameLayout
                android:id="@+id/frameLayout_userImage"
                android:layout_width="@dimen/profile_userImageSize"
                android:layout_height="@dimen/profile_userImageSize"
                android:layout_marginTop="@dimen/profile_userImageMarginTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView_userProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/profile_userPhotoMargin"
                    android:background="@color/colorGrey"
                    android:contentDescription="@string/description"
                    android:scaleType="fitXY"
                    android:src="@drawable/profilephoto">

                </ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/user_background">
                </View>
            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_firstName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/hint_firstName"
                app:boxStrokeColor="@color/pinkThemeColor"
                app:endIconTint="@color/pinkThemeColor"
                app:hintTextColor="@color/pinkThemeColor"
                android:textColorHint="@color/secondaryTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout_userImage">

                <com.example.myshopnetapp.Utilities.MSNEditText
                    android:id="@+id/editText_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:inputType="text"
                    android:padding="@dimen/edit_padding"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/edit_textSize">
                </com.example.myshopnetapp.Utilities.MSNEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_lastName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/hint_lastName"
                app:boxStrokeColor="@color/pinkThemeColor"
                app:endIconTint="@color/pinkThemeColor"
                app:hintTextColor="@color/pinkThemeColor"
                android:textColorHint="@color/secondaryTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_firstName">

                <com.example.myshopnetapp.Utilities.MSNEditText
                    android:id="@+id/editText_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:padding="@dimen/edit_padding"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/edit_textSize">
                </com.example.myshopnetapp.Utilities.MSNEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/hint_email_id"
                android:textColorHint="@color/secondaryTextColor"
                app:boxStrokeColor="@color/pinkThemeColor"
                app:endIconTint="@color/pinkThemeColor"
                app:hintTextColor="@color/pinkThemeColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_lastName">

                <com.example.myshopnetapp.Utilities.MSNEditText
                    android:id="@+id/editText_profileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:padding="@dimen/edit_padding"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/edit_textSize">
                </com.example.myshopnetapp.Utilities.MSNEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_mobileNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/editText_mobileNumber"
                android:textColorHint="@color/secondaryTextColor"
                app:boxStrokeColor="@color/pinkThemeColor"
                app:endIconTint="@color/pinkThemeColor"
                app:hintTextColor="@color/pinkThemeColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_email">

                <com.example.myshopnetapp.Utilities.MSNEditText
                    android:id="@+id/editText_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    android:padding="@dimen/edit_padding"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/edit_textSize">
                </com.example.myshopnetapp.Utilities.MSNEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <RadioGroup
                android:id="@+id/radioGroup_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_radioButtonHeight"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/button_profileSave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout_mobileNumber">

                <com.example.myshopnetapp.Utilities.MSNRadioButton
                    android:id="@+id/radioButton_male"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/profile_radioMarginStartEnd"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_gender_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/radioButton_male"
                    android:textColor="@drawable/drawable_gender_textcolor_selector"
                    android:textStyle="bold">
                </com.example.myshopnetapp.Utilities.MSNRadioButton>

                <com.example.myshopnetapp.Utilities.MSNRadioButton
                    android:id="@+id/radioButton_female"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/profile_radioMarginStartEnd"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_gender_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/radioButton_female"
                    android:textColor="@drawable/drawable_gender_textcolor_selector"
                    android:textStyle="bold">
                </com.example.myshopnetapp.Utilities.MSNRadioButton>
            </RadioGroup>

            <com.example.myshopnetapp.Utilities.MSNButton
                android:id="@+id/button_profileSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background"
                android:foreground="?attr/selectableItemBackground"
                android:paddingBottom="@dimen/button_padding"
                android:paddingTop="@dimen/button_padding"
                android:text="@string/button_labelSave"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/button_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroup_gender">
            </com.example.myshopnetapp.Utilities.MSNButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>